@model LocalEvent;
@{
    <div class="row">
        <div class="col-sm-12 col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">


                    @using (Html.BeginForm())
    {
                <div class="row">
                    <div class="col-12">
                        <h3>@(Model.Id == 0 ? "Crear Evento" : "Editar Evento")</h3>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name)
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.Name)</small>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Description)
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.Description)</small>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Address)
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.Address)</small>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Date)
                            @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "form-control" } })

                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.Date)</small>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Aceptar</button>
                    </div>
                </div>
}
                </div>
            </div>
        </div>
    </div>
}
